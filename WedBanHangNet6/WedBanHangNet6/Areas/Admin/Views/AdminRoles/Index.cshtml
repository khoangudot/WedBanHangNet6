@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WedBanHangNet6.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bordered Table -->
<div class="card" style=" margin-left:23px; margin-top:10px;" >
    <h5 style="text-align:center" class="card-header">Danh sách quyền truy cập</h5>
    <div class="card-body">
        <div class="table-responsive text-nowrap" style=" text-align:center">
            <table class="table table-bordered" ">
                <thead>
                    <tr>
                        <th style="width:10%">Id</th>
                        <th style="width:20%">Role Name</th>
                        <th style="width:45%">Description</th>
                        <th style="width:15%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model != null)
                    {
                    foreach(var item in Model)
                    {
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.RoleId</strong>
                        </td>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.RoleName</strong>
                        </td>
                        <td>
                            
                            <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Description</strong>
                        </td>
                        
                        <td>
                           
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="AdminRoles/Details/@item.RoleId">                         
                                        <i class="bx bx-search fs-4 lh-0"></i> Details
                                    </a>
                                    <a a class="dropdown-item" href="AdminRoles/Edit/@item.RoleId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="AdminRoles/Delete/@item.RoleId"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    }
                    }
                </tbody>
            </table>
        </div>
        <div style=" margin-top:10px">
            <a href="AdminRoles/Create" class="btn rounded-pill btn-outline-warning">Tạo mới</a>
        </div>
    </div>
</div>
<!--/ Bordered Table -->